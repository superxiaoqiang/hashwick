btn-styles-dark(btn-color = #555)
  border-color: lighten(btn-color, 20%)

  &:hover
    background-color: lighten(btn-color, 10%)
  &:active
    background-color: darken(btn-color, 15%)

.btn
  &:active, &.active
    background-image: none;

.btn-default
  btn-styles-dark($btn-default-bg)
.btn-primary
  btn-styles-dark($btn-primary-bg)
.btn-success
  btn-styles-dark($btn-success-bg)
.btn-warning
  btn-styles-dark($btn-warning-bg)
.btn-danger
  btn-styles-dark($btn-danger-bg)
.btn-info
  btn-styles-dark($btn-info-bg)

.popover-title
  border-bottom-color: $popover-border-color

.well
  border-color: hsl(0, 0%, 30%)
