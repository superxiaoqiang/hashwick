.layout-editor-backdrop
  background: black
  opacity: 0.33

.layout-editor-insert-bar
  bar-color = rgba(0, 0, 0, 0.25)
  &.top
    border-top-color: bar-color
  &.bottom
    border-bottom-color: bar-color
  &.left
    border-left-color: bar-color
  &.right
    border-right-color: bar-color
  > .content
    > a
      color: white
      text-shadow: 0 0 6px white
