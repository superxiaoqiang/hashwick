$app-footer-height = 32px

main
  position: absolute
  left: 0
  right: 0
  top: $navbar-height
  bottom: $app-footer-height

tmp = "(max-width: " + $screen-sm-max + ") and (orientation: landscape)"
@media tmp
  body > footer
    display: none
  main
    bottom: 0

body > header:first-child .navbar-brand
  padding: 0 $navbar-padding-horizontal
  font: bold 3rem/$navbar-height Raleway, sans-serif

.navbar-center
  position: absolute
  left: 0
  width: 100%
  text-align: center
  & .list-inline li
    &.active a
      cursor: default
      &:hover
        text-decoration: none

tmp = "(max-width: " + $screen-xs-max + ")"
@media tmp
  .navbar-center
    display: none

.app-footer
  position: absolute
  bottom: 0
  width: 100%
  height: $app-footer-height
  border-top: 1px solid $app-footer-border-color
.app-footer-right
  @extend .list-inline
  float: right
  margin-bottom: 0
  line-height: $app-footer-height - 2px
