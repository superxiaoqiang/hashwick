$nav-tabs-active-link-hover-border-color = $generic-dark-border
$navbar-default-bg = hsl(0, 0%, 0%)
$navbar-default-link-color = hsl(0, 0%, 70%)
$navbar-default-link-hover-color = hsl(0, 0%, 90%)

$dropdown-bg = hsl(240, 5%, 10%)
$dropdown-border = $generic-dark-border
$dropdown-divider-bg = $generic-dark-border
$dropdown-link-color = $text-color

$modal-content-bg = hsl(0, 0%, 10%)
$modal-content-border-color = $generic-dark-border
$modal-header-border-color = $generic-dark-border

$well-bg = hsl(0, 0%, 5%)
$well-border-color = $generic-dark-border

$thumbnail-bg = hsl(0, 0%, 5%)
