$theme = "bnight"

$generic-buy-color = hsl(120, 70%, 65%)
$generic-sell-color = hsl(0, 60%, 60%)
$generic-dark-border = hsl(0, 0%, 30%)

$brand-primary = hsl(270, 65%, 40%)
$component-active-bg = hsl(270, 50%, 50%)

$body-bg = hsl(240, 25%, 3%)
$text-color = hsl(0, 0%, 80%)
$link-color = hsl(270, 85%, 70%)
$link-hover-color = hsl(270, 100%, 85%)
$text-muted = hsl(0, 0%, 50%)

$btn-default-color = hsl(0, 0%, 75%)
$btn-default-bg = hsl(0, 0%, 15%)
$btn-default-border = $generic-dark-border

$input-bg = hsl(0, 0%, 0%)
$input-color = $text-color
$input-border = hsl(0, 0%, 25%)
