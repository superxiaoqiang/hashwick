$fill-container
  absolute: top left
  width: 100%
  height: 100%

.table tbody > tr > .table-buttons-cell
  width: 1px
  vertical-align: middle
  text-align: right
  white-space: nowrap

.modal
  overflow-y: auto

tmp = "screen and (min-width: " + $screen-tablet + ")"
@media tmp
  .modal-dialog
    width: auto
    max-width: 600px

.list-inline > li.active > a
  font-weight: bold
  color: $text-color
  cursor: default
  &:hover
    text-decoration: none
