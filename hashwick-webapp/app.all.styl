$fill-container
  absolute: top left
  width: 100%
  height: 100%

.nav-tabs
  margin-bottom: 1.5rem

.table tbody > tr > .table-buttons-cell
  width: 1px
  vertical-align: middle
  text-align: right
  white-space: nowrap

.table
  thead, tbody, tfoot
    > tr:first-child
      > th, > td
        border-top: 0

.modal
  overflow-y: auto

tmp = "screen and (min-width: " + $screen-tablet + ")"
@media tmp
  .modal-dialog
    width: auto
    max-width: 600px

.thumbnail.clickable
  cursor: pointer
.thumbnail.clickable:hover
  @extend a.thumbnail:hover
.thumbnail > .caption > h3:first-child
  margin-top: 10px
